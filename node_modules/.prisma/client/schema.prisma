model Aircraft {
  id           String @id @default(cuid())
  model        String
  manufacturer String
  flightHours  String
  serialNumber Int    @unique

  maintenances Maintenance[]
}

model Maintenance {
  id          String    @id @default(cuid())
  aircraftId  String
  serviceType String // Ex: 'Preventiva' ou 'Corretiva'
  description String? // detalhes da ordem de servi√ßo
  openedAt    DateTime
  closedAt    DateTime?

  aircraft Aircraft @relation(fields: [aircraftId], references: [id])
}
